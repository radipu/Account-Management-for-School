@if (ViewBag.OeErrorMessage != null)
{
    @ViewBag.OeErrorMessage;
}
else
{
    @model OE.Web.Models.IndexLoginVM
    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="~/DataDictionary/images/Home/sass_logo.jpg" asp-append-version="true" class="brand_logo" alt="Logo" />

                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">               
                    <form>                
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" id="OurEduId" name="OurEduId" class="form-control input_user" value="" placeholder="Enter OurEdu Id" required>
                            @*<input type="text" class="form-control" id="OurEduId" name="OurEduId" placeholder="Enter OurEdu Id" required />*@

                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" id="Password" name="Password" class="form-control input_pass" value="" placeholder="Enter Password" required>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="customControlInline">
                                <label class="custom-control-label" for="customControlInline">Remember me</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mt-3 login_container">
                            <input class="form-control" type="hidden" name="LastEntryDate" value="@DateTime.UtcNow" />
                         
                            <input class="btn login_btn" type="submit" value="Login" formmethod="post"
                                   asp-area=""
                                   asp-controller="Home"
                                   asp-action="Login">
                        </div>

                    </form>
                </div>
                <div class="d-flex justify-content-center links">                    
                    <a asp-area=""
                       asp-controller="Home"
                       asp-action="ForgetPassword">Forgot your password?</a>
                </div>
                <div class="d-flex justify-content-center links">
                    <p class="text-danger text-center"><b>@ViewBag.msg</b></p>
                </div>

            </div>
        </div>
    </div>
}

@section Scripts
    {

    <script type="text/javascript">
        $("#Login").on('click', function (e) {
            e.preventDefault();
            var email = $('input#OurEduId').val();
            var password = $('input#Password').val();
            var rememberMe = $('#customControlInline option:selected');;
        
            if (rememberMe == true) {
                $('#OurEduId').val(email);
                $('#Password').val(password);
            }
            else {
                $('#OurEduId').val(" ");
                $('#Password').val(" ");
            }
           
        });
    </script>
}

