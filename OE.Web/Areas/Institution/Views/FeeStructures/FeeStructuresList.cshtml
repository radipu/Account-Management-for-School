        $("#delFeeStructureId").val($(this).data("id"));
    });
    $("#btnDeleteFeeStructure").on('click', function (e) {
        e.preventDefault();
        var formData = new FormData($("#deleteFeeStructureList")[0]);
        $.ajax({
