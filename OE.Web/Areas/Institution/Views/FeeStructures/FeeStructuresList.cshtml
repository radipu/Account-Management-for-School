    $("#btnEditFeestructure").on('click', function (e) {
        e.preventDefault();
        var formData = new FormData($("#editFeeStructure")[0]);
        $.ajax({
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,

            url: '@Url.Action("UpdateFeeStructure", "FeeStructures")',
            success: function (response) {
                location.reload();
            },
