               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("DeleteFeeType", "FeeTypes")',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () { }

